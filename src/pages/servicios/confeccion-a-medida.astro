---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const title = 'Confección a Medida en Córdoba - Puntadas y Punto';
const description = 'Confección artesanal de prendas a medida en Córdoba. Vestidos de fiesta, ceremonias y ocasiones especiales. Cada prenda es única y personalizada según tus medidas y estilo.';

const breadcrumbs = [
  { label: 'Inicio', href: '/' },
  { label: 'Servicios', href: '/servicios/' },
  { label: 'Confección a medida' }
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Confección de prendas a medida",
  "description": "Diseño y confección artesanal de prendas únicas adaptadas a medidas exactas",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Puntadas y Punto",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Glorieta de los Países Bálticos 1, Oficina 11",
      "addressLocality": "Córdoba",
      "postalCode": "14014",
      "addressCountry": "ES"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Córdoba",
    "addressCountry": "ES"
  },
  "serviceType": "Confección a medida"
};
---

<Layout title={title} description={description} schema={serviceSchema}>
  <Breadcrumbs items={breadcrumbs} />

  <!-- Hero Section -->
  <section class="py-16 bg-gradient-to-br from-cream-100 to-cream-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
            <span class="text-burgundy-700">Confección a Medida</span> en Córdoba
          </h1>
          <p class="text-xl text-gray-700 mb-8 leading-relaxed">
            Creamos prendas únicas adaptadas perfectamente a tu cuerpo y estilo. 
            Vestidos de fiesta, trajes, ropa infantil y mucho más. 
            Pide tu cita y te atenderemos sin compromiso.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#proceso" class="btn btn-primary">
              Ver proceso
            </a>
            <a href="/contacto/" class="btn btn-secondary">
              Solicitar cita
            </a>
          </div>
        </div>
        <div>
          <img
            src="/images/new_images/Vestido de fiesta largo color nude con falda de tul y cuerpo bordado en pedrería – diseño elegante para gala o ceremonia.jpg"
            alt="Vestido de fiesta confeccionado a medida en Puntadas y Punto, Córdoba"
            class="rounded-lg shadow-xl w-full h-auto object-cover"
            loading="eager"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Tipos de prendas -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Tipos de Prendas que Confeccionamos
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Desde vestidos de fiesta hasta ropa infantil personalizada, 
          cada prenda es única y está hecha especialmente para ti.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        <!-- Vestidos de fiesta -->
        <div class="group cursor-pointer">
          <div class="aspect-w-3 aspect-h-4 overflow-hidden rounded-lg mb-4">
            <img
              src="/images/new_images/Vestido de fiesta rojo con escote cruzado y detalle de plumas – confección a medida.jpg"
              alt="Vestido de fiesta rojo confeccionado a medida"
              class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              width="400"
              height="500"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Vestidos de Fiesta</h3>
          <p class="text-gray-600 text-sm">
            Diseños elegantes para bodas, galas y eventos especiales. 
            Cada vestido es único y se adapta perfectamente a tu figura.
          </p>
        </div>

        <!-- Vestidos de ceremonia -->
        <div class="group cursor-pointer">
          <div class="aspect-w-3 aspect-h-4 overflow-hidden rounded-lg mb-4">
            <img
              src="/images/new_images/Vestido largo fucsia con espalda descubierta y capa fluida – invitada de boda.jpg"
              alt="Vestido largo fucsia para invitada de boda"
              class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              width="400"
              height="500"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Vestidos de Ceremonia</h3>
          <p class="text-gray-600 text-sm">
            Perfectos para invitadas de boda, comuniones y celebraciones. 
            Elegancia y distinción en cada detalle.
          </p>
        </div>

        <!-- Ropa infantil -->
        <div class="group cursor-pointer">
          <div class="aspect-w-3 aspect-h-4 overflow-hidden rounded-lg mb-4">
            <img
              src="/images/new_images/Vestido de ceremonia infantil azul con top de topos y falda de tablas – estilo damita de honor.jpg"
              alt="Vestido de ceremonia infantil azul"
              class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              width="400"
              height="500"
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Ropa Infantil</h3>
          <p class="text-gray-600 text-sm">
            Prendas especiales para los más pequeños. Comodidad, calidad 
            y diseños que les hacen sentir únicos.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Proceso de confección -->
  <section id="proceso" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Nuestro Proceso de Confección
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Desde la primera consulta hasta la entrega final, cada paso está cuidadosamente 
          planificado para crear la prenda perfecta para ti.
        </p>
      </div>

      <div class="space-y-12">
        <!-- Paso 1 -->
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="lg:w-1/2">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-burgundy-700 text-white rounded-full flex items-center justify-center text-xl font-bold mr-4">1</div>
              <h3 class="text-2xl font-bold text-gray-900">Consulta Personalizada</h3>
            </div>
            <p class="text-gray-700 mb-6 leading-relaxed">
              Nos reunimos contigo para entender tu visión, estilo y ocasión de uso. 
              Analizamos tu morfología y gustos para crear un diseño único que te favorezca al máximo.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Asesoramiento sobre estilos y colores
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Selección de tejidos y materiales
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Bocetos preliminares del diseño
              </li>
            </ul>
          </div>
          <div class="lg:w-1/2">
            <img
              src="/images/new_images/Proceso de traje a medida.jpg"
              alt="Proceso de diseño y consulta para prendas a medida"
              class="rounded-lg shadow-lg w-full h-auto object-cover"
              loading="lazy"
              width="500"
              height="300"
            />
          </div>
        </div>

        <!-- Paso 2 -->
        <div class="flex flex-col lg:flex-row-reverse items-center gap-12">
          <div class="lg:w-1/2">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-burgundy-700 text-white rounded-full flex items-center justify-center text-xl font-bold mr-4">2</div>
              <h3 class="text-2xl font-bold text-gray-900">Toma de Medidas</h3>
            </div>
            <p class="text-gray-700 mb-6 leading-relaxed">
              Realizamos una toma de medidas exhaustiva y profesional. Cada cuerpo es único 
              y nuestro patrón debe reflejar perfectamente tus proporciones.
            </p>
            <ul class="space-y-2 text-gray-600">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Más de 20 medidas específicas
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Análisis de postura y proporciones
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-burgundy-700 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Registro fotográfico de referencia
              </li>
            </ul>
          </div>
          <div class="lg:w-1/2">
            <img
              src="/images/new_images/Montaje de traje.jpg"
              alt="Proceso de toma de medidas y montaje"
              class="rounded-lg shadow-lg w-full h-auto object-cover"
              loading="lazy"
              width="500"
              height="300"
            />
          </div>
        </div>

        <!-- Paso 3 -->
        <div class="flex flex-col lg:flex-row items-center gap-12">
          <div class="lg:w-1/2">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-burgundy-700 text-white rounded-full flex items-center justify-center text-xl font-bold mr-4">3</div>
              <h3 class="text-2xl font-bold text-gray-900">Confección Artesanal</h3>
            </div>
            <p class="text-gray-700 mb-6 leading-relaxed">
              Comenzamos la confección artesanal de tu prenda. Cada costura, cada detalle, 
              se realiza con la máxima precisión y cuidado por nuestras expertas costureras.
            </p>
            <div class="grid grid-cols-2 gap-4 text-center">
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-burgundy-700 mb-1">30-50h</div>
                <div class="text-sm text-gray-600">Horas de trabajo</div>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-burgundy-700 mb-1">3-5</div>
                <div class="text-sm text-gray-600">Semanas de confección</div>
              </div>
            </div>
          </div>
          <div class="lg:w-1/2">
            <img
              src="/images/new_images/Vestido asimétrico rojo con espalda abierta – elegante para boda.jpg"
              alt="Proceso de confección artesanal de vestidos"
              class="rounded-lg shadow-lg w-full h-auto object-cover"
              loading="lazy"
              width="500"
              height="300"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-burgundy-700 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        ¿Lista para tu Prenda Perfecta?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Cada prenda que creamos es única, como la mujer que la llevará. 
        Convierte tu sueño en realidad con nuestro equipo de expertas costureras.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contacto/" class="bg-white text-burgundy-700 hover:bg-gray-100 px-8 py-3 rounded-md font-medium transition-colors duration-200">
          Solicitar cita
        </a>
        <a href="tel:+34699869097" class="border-2 border-white text-white hover:bg-white hover:text-burgundy-700 px-8 py-3 rounded-md font-medium transition-colors duration-200">
          Llamar ahora
        </a>
      </div>
    </div>
  </section>
</Layout>
