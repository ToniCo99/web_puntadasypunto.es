---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  canonicalUrl?: string;
  schema?: any;
}

const {
  title = 'Puntadas y Punto - Escuela de Costura y Confección a Medida en Córdoba',
  description = 'Taller artesanal de costura y patronaje en Córdoba con más de 30 años de experiencia. Especialistas en confección a medida, clases de costura y vestuario de teatro.',
  image = '/images/taller-costura-cordoba-hero.jpg',
  noindex = false,
  canonicalUrl,
  schema
} = Astro.props;

const canonicalURL = canonicalUrl || new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <SEO 
      title={title}
      description={description}
      image={image}
      canonicalUrl={canonicalURL.href}
      noindex={noindex}
      schema={schema}
    />
  </head>
  <body class="font-sans text-gray-900 bg-cream">
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
